<Window x:Class="Tela_Browse_Erros"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Telemetria_Busca_Erros"
        mc:Ignorable="d" 
        UseLayoutRounding="True"
        AllowsTransparency="True"
        WindowStyle="None"
        SnapsToDevicePixels="True"
        Background="Transparent"
        Height="730" 
        Padding="0,6,0,0"
        ResizeMode="CanResizeWithGrip"
        Width="1024"
        Margin="0,0,0,0"
        MinHeight="730" 
        MinWidth="1024"
        d:DesignHeight="730" d:DesignWidth="1024">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Recursos_Telemetria.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <local:Converter_Hot x:Key="ConverterHot" />
            <local:Converter_Barra x:Key="ConverterBarra" />

        </ResourceDictionary>

    </Window.Resources>

    <!-- Grid Principal -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Border Height="30"
                Name="Borda_Cabecalho"
                CornerRadius="3,3,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#b33838" Offset="0"/>
                    <GradientStop Color="#762727" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <Border Width="20" 
                        Height="20"
                        HorizontalAlignment="Left"
                        Margin="5,0,0,0" RenderTransformOrigin="0.5,0.5">
                    <Image Source="bug.png"/>
                    <Border.RenderTransform>
                        <RotateTransform Angle="45"/>
                    </Border.RenderTransform>
                </Border>

                <TextBlock Text="Busca de Erros" 
                           VerticalAlignment="Center" 
                           FontSize="16"
                           Opacity="0.95"
                           Grid.ColumnSpan="2"
                           FontFamily="Segoe UI"
                           FontWeight="Normal"
                           HorizontalAlignment="Center"
                           Foreground="#FFFFFF"
                           Margin="10,0,10,0"/>



                <StackPanel Orientation="Horizontal" Grid.Column="1">

                    <Button Width="18"
                            Margin="0,0,5,0"
                            Style="{StaticResource Minimizar}"
                            Name="B_Minimizar"
                            Height="18"/>

                    <Button Width="18"
                            Height="18"
                            Style="{StaticResource Maximizar}"
                            Margin="0,0,5,0"
                            Name="B_Maximizar"/>

                    <Button Width="18"
                            Height="18"
                            Visibility="Collapsed"
                            Style="{StaticResource Restaurar}"
                            Margin="0,0,5,0"
                            Name="B_Restaurar"/>

                    <Button Width="18"
                            Height="18"
                            Style="{StaticResource Fechar}"
                            Margin="0,0,5,0"
                            Name="B_Fechar"/>

                </StackPanel>

                <StackPanel Grid.Row="1"
                            Grid.ColumnSpan="2">
                    <Rectangle Height="1"
                               SnapsToDevicePixels="True"
                               Fill="#40FFFFFF"/>

                </StackPanel>

                <!-- Filtros -->
                <Border Background="#4f0d0d"
                        Grid.Row="2"
                        Grid.ColumnSpan="2">
                    <Grid Grid.Row="2"
                      Margin="10,5,10,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Versão"
                               Foreground="#FFFFFF"
                               FontSize="13"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                        <TextBox Name="Texto_Versao" 
                             Width="50" 
                             Text="9.2."
                             BorderThickness="0"
                             Margin="0,0,0,0"
                             Height="20"
                             Grid.Column="1"/>

                        <TextBlock Text="Telas"
                                   Foreground="#FFFFFF"
                                   FontWeight="Normal"
                                   FontSize="13"
                                   Visibility="Collapsed"
                                   VerticalAlignment="Center"
                                   Grid.Column="3"
                                   Margin="20,0,10,0"/>
                        <ComboBox Height="20" Grid.Column="4"
                                  Width="250"
                                  Visibility="Collapsed"
                                  Name="ComboTelas"
                                  BorderThickness="0"/>

                        <CheckBox Content="Agrupar Tela Mov."
                                  Foreground="#FFFFFF"
                                  VerticalAlignment="Center"
                                  Grid.Column="2"
                                  IsChecked="True"
                                  Name="Agrupar_Tela_Movimento"
                                  Margin="20,1,0,0"/>

                        <Menu Grid.Column="5"
                              Cursor="Hand"
                              HorizontalAlignment="Left"
                              Background="Transparent"
                              Margin="10,0,0,1" VerticalAlignment="Center">
                            <MenuItem Template="{DynamicResource MenuItemControlTemplate1}">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Desconsiderar:"
                                                   Foreground="#FFFFFF"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"
                                                   Grid.Column="3"
                                                   Margin="0,0,5,0"/>

                                        <TextBlock Text="Erros Conexão,"
                                                   Foreground="#50FFFFFF"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"
                                                   Grid.Column="3"
                                                   Margin="0,0,5,0"
                                                   Visibility="{Binding ElementName=Desconsiderar_TimeOut, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <TextBlock Text="Null,"
                                                   Foreground="#50FFFFFF"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"
                                                   Grid.Column="3"
                                                   Visibility="{Binding ElementName=Desconsiderar_Null, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="Resolvidos,"
                                                   Foreground="#50FFFFFF"
                                                   FontSize="13"
                                                   Visibility="{Binding ElementName=Sem_Resolvidos, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                   VerticalAlignment="Center"
                                                   Grid.Column="3"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="Em Andamento e"
                                                   Foreground="#50FFFFFF"
                                                   FontSize="13"
                                                   Visibility="{Binding ElementName=Sem_Resolvendo, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                   VerticalAlignment="Center"
                                                   Grid.Column="3"
                                                   Margin="0,0,5,0"/>

                                        <TextBlock Text="S9 no StackT"
                                                   Foreground="#50FFFFFF"
                                                   FontWeight="Normal"
                                                   FontSize="13"
                                                   Visibility="{Binding ElementName=S9_Stack, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"
                                                   VerticalAlignment="Center"
                                                   Grid.Column="3"
                                                   Margin="0,0,5,0"/>

                                    </StackPanel>
                                </MenuItem.Header>
                                <MenuItem Template="{DynamicResource MenuItemControlTemplate1}">
                                    <MenuItem.Header>
                                        <StackPanel>
                                            <CheckBox Content="Desc. Erros Conexão"
                                                      Foreground="#FFFFFF"
                                                      VerticalAlignment="Center"
                                                      Grid.Column="5"
                                                      Name="Desconsiderar_TimeOut"
                                                      Margin="0,4,0,0"/>

                                            <CheckBox Content="Desc. Erros Null"
                                                      Foreground="#FFFFFF"
                                                      VerticalAlignment="Center"
                                                      Grid.Column="6"
                                                      Name="Desconsiderar_Null"
                                                      Margin="0,4,0,0"/>



                                            <CheckBox Content="Desconsiderar Resolvidos"
                                                      Foreground="#FFFFFF"
                                                      VerticalAlignment="Center"
                                                      Grid.Column="7"
                                                      IsChecked="False"
                                                      Name="Sem_Resolvidos"
                                                      Margin="0,4,0,0"/>

                                            <CheckBox Content="Desconsiderar Em Andamento"
                                                      Foreground="#FFFFFF"
                                                      VerticalAlignment="Center"
                                                      Grid.Column="8"
                                                      IsChecked="False"
                                                      Name="Sem_Resolvendo"
                                                      Margin="0,4,0,0"/>



                                            <CheckBox Content="S9 no StackT."
                                                      Foreground="#FFFFFF"
                                                      VerticalAlignment="Center"
                                                      Grid.Column="10"
                                                      IsChecked="False"
                                                      Name="S9_Stack"
                                                      Margin="0,4,0,4"/>
                                        </StackPanel>
                                    </MenuItem.Header>
                                </MenuItem>
                            </MenuItem>
                        </Menu>




                        <Button Name="B_Filtrar_Tela"
                                ToolTip="Buscar por tela"
                                Visibility="Collapsed"
                                Width="40" Grid.Column="11"
                                Style="{StaticResource Botao_Vermelho}"
                                Height="20"
                                FontSize="10"
                                VerticalAlignment="Center"
                                Margin="20,0,0,0"
                                Content="" 
                                FontFamily="Segoe UI Symbol"
                                HorizontalAlignment="Left">

                        </Button>




                    </Grid>
                </Border>
            </Grid>



        </Border>

        <!-- nao Cabeçalho -->
        <Border Grid.Row="1"
                BorderThickness="0"
                BorderBrush="#4f0d0d"
                CornerRadius="0,0,3,3"
                Background="#dddddd">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                 </Grid.ColumnDefinitions>   

                <!-- Sombra -->
                <Border Grid.ColumnSpan="2"
                        Height="60"
                        Opacity="0.6"
                        SnapsToDevicePixels="True"
                        Margin="0,3,0,0"
                        VerticalAlignment="Top">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="#BBBBBB"/>
                            <GradientStop Offset="1" Color="#DDDDDD"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>


                <!-- Botoes Busca -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Top"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center">

                    <Button Grid.Column="2" 
                            Name="B_Por_Tela"
                            ToolTip="Buscar por tela"
                            Width="100"
                            Style="{StaticResource Botao_Vermelho}"
                            Height="27"
                            FontWeight="Normal"
                            VerticalAlignment="Center"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            Content="Por Tela"/>

                    <Button Grid.Column="1" Grid.Row="1"
                            Name="B_Por_Erro"
                            Width="100"
                            FontWeight="Normal"
                            ToolTip="Buscar por erro"
                            Height="27"
                            Margin="5,0,0,0"
                            Style="{StaticResource Botao_Vermelho}"
                            HorizontalAlignment="Left"
                            Content="Por Erro"/>


                    <Button 
                            Name="B_Gerar_Estatistica"
                            Width="100"
                            FontWeight="Normal"
                            ToolTip="Gera estatística"
                            Height="27"
                            Margin="5,0,0,0"
                            Style="{StaticResource Botao_Vermelho}"
                            HorizontalAlignment="Left"
                            Content="Gera Estatística"/>

                    <Button 
                            Name="B_Atualizar"
                            Width="100"
                            FontWeight="Normal"
                            ToolTip="Atualizar erros"
                            Height="27"
                            Margin="55,0,0,0"
                            Style="{StaticResource Botao_Vermelho}"
                            HorizontalAlignment="Left"
                            Content="Atualizar estatisticas"/>

                </StackPanel>

                <!-- Toggle Mostra Filtro -->
                <ToggleButton Width="25" 
                              Height="25"
                              Style="{StaticResource Toggle_Busca}"
                              VerticalAlignment="Top"
                              Margin="57,0,0,0"
                              HorizontalAlignment="Left">
                    <ToggleButton.Triggers>
                        <EventTrigger RoutedEvent="ToggleButton.Checked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="Borda_Cabecalho"
                                                     Storyboard.TargetProperty="Height"
                                                     To="62"
                                                     Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                            <BeginStoryboard>
                                <Storyboard>

                                    <DoubleAnimation Storyboard.TargetName="Borda_Cabecalho"
                                                     Storyboard.TargetProperty="Height"
                                                     To="30"
                                                     Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ToggleButton.Triggers>
                </ToggleButton>


                <Grid VerticalAlignment="Top"
                      Margin="12,35,41,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock VerticalAlignment="Center" Margin="0,0,5,0" Grid.Column="0" FontWeight="Bold"
                                           Foreground="#FF4f0d0d">Total de Erros:</TextBlock>

                    <TextBlock Text="{Binding Quantidade}" Grid.Column="1" Foreground="#9F4f0d0d" FontWeight="Bold"/>

                    <TextBlock VerticalAlignment="Center" Margin="15,0,5,0" Grid.Column="2" FontWeight="Bold"
                                           Foreground="#FF4f0d0d">Previsão prox. versão:</TextBlock>

                    <TextBlock Text="{Binding PrevisaoProximaVersao}" Grid.Column="4" Foreground="#9F4f0d0d" FontWeight="Bold"/>

                </Grid>

                <Grid Grid.Row="0"
                      Margin="10,55,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="200" Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition MinHeight="200" Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <DataGrid  Name="Grid_Busca_Tela" 
                               Visibility="Collapsed"
                               Grid.Row="0" 
                               Grid.ColumnSpan="2"
                               RowHeaderWidth="0"
                               Background="Transparent"
                               BorderThickness="0"
                               AutoGenerateColumns="False"
                               SelectionMode="Single"
                               VerticalGridLinesBrush="Transparent"
                               HorizontalGridLinesBrush="Transparent"
                               ItemsSource="{Binding Erros_Por_Tela}"
                               Margin="00,0,0,10">
                            <DataGrid.RowHeight>
                                23
                            </DataGrid.RowHeight>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tela" Binding="{Binding Tela}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Quantidade" Binding="{Binding Qtde}" MaxWidth="100" Width="100" MinWidth="100" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Qtde. Cliente" Binding="{Binding Qtde_Clientes}" MaxWidth="100" MinWidth="100" Width="100" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <DataGrid  Name="Grid_Busca_Erro" 
                                   Grid.Row="0" 
                                   Grid.ColumnSpan="2"
                                   Visibility="Visible"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   AutoGenerateColumns="False"
                                   SelectionMode="Single"
                                   Margin="00,0,0,10"
                                   VerticalGridLinesBrush="Transparent"
                                   HorizontalGridLinesBrush="Transparent"
                                   RowHeaderWidth="0"
                                   ItemsSource="{Binding Erros_Por_Tela}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Erro" Binding="{Binding Tela}" MinWidth="786" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Quantidade" Binding="{Binding Qtde}" Width="100" MaxWidth="100" MinWidth="100" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Qtde. Cliente" Binding="{Binding Qtde_Clientes}" Width="100" MaxWidth="100" MinWidth="100" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>


                    </Grid>

                    <!-- Gridsplitter -->
                    <GridSplitter Grid.Row="1"
                                  ShowsPreview="true" 
                                  HorizontalAlignment="Stretch" />

                    <Border Grid.Row="2"
                            CornerRadius="0"
                            BorderThickness="1"
                            BorderBrush="#EFEFEF"
                            Background="#30000000"
                            Margin="0,10,0,0">
                        <ListBox Name="Lista_Busca1" 
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 Background="Transparent"
                                 VerticalContentAlignment="Stretch"
                                 HorizontalContentAlignment="Stretch"
                                 Padding="0"
                                 BorderThickness="0">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="2,2,2,0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <Rectangle Width="3" Fill="Yellow" Visibility="Collapsed" Name="Resolvendo"/>

                                                    <Rectangle Width="3" Fill="DarkRed" Visibility="Collapsed" Name="Resolvido"/>

                                                    <Border Background="#60FFFFFF"
                                                        Padding="0"
                                                        Grid.Column="1"
                                                        BorderThickness="0"
                                                        BorderBrush="Transparent"
                                                        Name="Borda_Content"
                                                        CornerRadius="0"
                                                            KeyDown="Borda_Content_KeyDown">
                                                        <Grid Margin="5">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition/>
                                                                <RowDefinition/>
                                                                <RowDefinition/>
                                                            </Grid.RowDefinitions>
                                                            <!-- Primeira Linha -->
                                                            <Grid Margin="0,3">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="75"/>
                                                                    <ColumnDefinition Width="150"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="150"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Text="Série" 
                                                                       FontWeight="SemiBold"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="#666666"/>
                                                                <TextBlock FontWeight="SemiBold"
                                                                       HorizontalAlignment="Left"
                                                                       FontSize="14"
                                                                       Margin="5,0,0,0"
                                                                       Grid.Column="1"
                                                                       VerticalAlignment="Center"
                                                                       Text="{Binding Serie, FallbackValue=HIDAPA-110003-QRMP}"
                                                                       Foreground="#4f0d0d"/>

                                                                <TextBlock Text="Usuário" 
                                                                       Grid.Column="2"
                                                                       Margin="40,0,0,0"
                                                                       FontWeight="SemiBold"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="#666666"/>
                                                                <TextBlock Grid.Column="3"
                                                                       Text="{Binding Usuario, FallbackValue=Douglas}"
                                                                       Foreground="#333333"
                                                                       FontSize="13"
                                                                       ToolTip="{Binding Usuario}"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       VerticalAlignment="Center"
                                                                       Margin="5,0,10,0"
                                                                       FontWeight="SemiBold"/>

                                                                <TextBlock Text="Tela Ativa" 
                                                                       Grid.Column="4"
                                                                       Margin="40,0,0,0"
                                                                       FontWeight="SemiBold"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="#666666"/>
                                                                <TextBlock Grid.Column="5"
                                                                       Grid.Row="2"
                                                                       Text="{Binding Tela, FallbackValue=Busca Movimento}"
                                                                       Foreground="#333333"
                                                                       FontSize="13"
                                                                       Width="255"
                                                                       HorizontalAlignment="Left"
                                                                       Margin="5,0,0,0"
                                                                       VerticalAlignment="Center"
                                                                       FontWeight="SemiBold"/>

                                                                <TextBlock Grid.Column="6"
                                                                       Grid.Row="2"
                                                                       Text="{Binding Data, StringFormat={}{0:dd/MM/yyyy}}"
                                                                       Foreground="#333333"
                                                                       FontSize="13"
                                                                       Width="255"
                                                                       HorizontalAlignment="Right"
                                                                       Margin="5,0,0,0"
                                                                       VerticalAlignment="Center"
                                                                       FontWeight="SemiBold"/>

                                                                <TextBlock Grid.Column="7"
                                                                       Grid.Row="2"
                                                                       Text="{Binding Hora}"
                                                                       Foreground="#333333"
                                                                       FontSize="13"
                                                                       Width="255"
                                                                       HorizontalAlignment="Right"
                                                                       Margin="5,0,0,0"
                                                                       VerticalAlignment="Center"
                                                                       FontWeight="SemiBold"/>

                                                                <TextBlock Grid.Column="8"
                                                                       Grid.Row="2"
                                                                       Text="{Binding Versao}"
                                                                       Foreground="#333333"
                                                                       FontSize="13"
                                                                       Width="255"
                                                                       HorizontalAlignment="Right"
                                                                       Margin="5,0,0,0"
                                                                       VerticalAlignment="Center"
                                                                       FontWeight="SemiBold"/>
                                                            </Grid>
                                                            <Grid Grid.Row="1" 
                                                              Margin="0,3">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="75"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="30"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Text="Telas Abertas" 
                                                                       FontWeight="SemiBold"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="#666666"/>
                                                                <TextBlock FontWeight="SemiBold"
                                                                       HorizontalAlignment="Left"
                                                                       FontSize="13"
                                                                       Margin="5,0,0,0"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Grid.Column="1"
                                                                       ToolTip="{Binding Telas_Abertas}"
                                                                       VerticalAlignment="Center"
                                                                       Text="{Binding Telas_Abertas, FallbackValue=1234654657897}"
                                                                       Foreground="#333333"/>

                                                            </Grid>
                                                            <Border Padding="5"
                                                                Grid.Row="2"
                                                                Height="50"
                                                                Name="Borda_Stack"
                                                                Background="#10000000">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition/>
                                                                        <RowDefinition Height="Auto"/>
                                                                    </Grid.RowDefinitions>

                                                                    <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                                        <StackPanel Orientation="Vertical">
                                                                            <TextBlock Text="Erro -" 
                                                                                    FontWeight="SemiBold"
                                                                                    VerticalAlignment="Center"
                                                                                    Foreground="DarkRed"/>
                                                                            <TextBox Text="{Binding Erro, FallbackValue=AQUI TEM UM ERROO ESCROTO}"
                                                                                    Margin="0" BorderThickness="0"
                                                                                    BorderBrush="Transparent" 
                                                                                    Background="Transparent"
                                                                                    IsReadOnly="True"
                                                                                    Foreground="DarkRed"/>

                                                                            <TextBlock Text="StackTrace -" 
                                                                                   FontWeight="SemiBold"
                                                                                   Margin="0,20,0,0"
                                                                                   VerticalAlignment="Center"
                                                                                   Foreground="#666666"/>
                                                                            <TextBox Text="{Binding Stack, FallbackValue=AQUI TEM UM ERROO ESCROTO}"
                                                                                 Margin="0" BorderThickness="0"
                                                                                 Foreground="#333333"
                                                                                 BorderBrush="Transparent" 
                                                                                 Background="Transparent"
                                                                                 IsReadOnly="True"/>
                                                                        </StackPanel>
                                                                    </ScrollViewer>
                                                                </Grid>
                                                            </Border>

                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding Alguem_Resolvendo}" Value="True">
                                                        <Setter TargetName="Resolvendo" Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Ja_Resolvido}" Value="True">
                                                        <Setter TargetName="Resolvido" Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="Borda_Stack"
                                                                                    Storyboard.TargetProperty="Height"
                                                                                    To="120"
                                                                                    Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="Borda_Stack"
                                                                                    Storyboard.TargetProperty="Height"
                                                                                    Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
